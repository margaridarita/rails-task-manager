<div class="page w-25 my-4 mx-auto p-4 rounded">

  <h1 class="m-0 wrap">
    <%= @task.title %>
  </h1>

  <h4 class="my-4 wrap">
    <%= @task.details %>
  </h4>

  <div class="d-flex justify-content-between">
    <button class="btn btn-dark">
      <%= link_to "Back to list", tasks_path %>
    </button>
    <button class="btn btn-dark">
      <%= link_to "Edit task", edit_task_path %>
    </button>
  </div>

</div>
