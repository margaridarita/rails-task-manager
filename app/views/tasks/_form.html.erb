<div class="mt-4">
  <%= form_with model: @task, data: { turbo: false } do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "mb-2"%>
      <%= f.text_field :title, class: "form-control"%>
      <% if @task.errors[:title].any? %>
        <div class="text-danger">
          <%= @task.errors[:title].first %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :details, class: "mb-2"%>
      <%= f.text_field :details, class: "form-control" %>
    </div>
    <%= f.submit "Save", class: "btn btn-dark" %>
  <% end %>
</div>
