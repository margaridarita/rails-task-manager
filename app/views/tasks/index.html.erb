<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task)%></li>
    <%# up you don't need to put (task.id) because ruby knows %>
    <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
      Delete
    <% end %>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
